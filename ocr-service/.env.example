# OCR Service Environment Variables
# Copy this file to .env and replace all placeholder values

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=REPLACE_WITH_YOUR_GEMINI_API_KEY

# Encryption Configuration
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_MASTER_KEY=REPLACE_WITH_YOUR_FERNET_KEY_HERE

# Audit & Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
AUDIT_SECRET=REPLACE_WITH_YOUR_AUDIT_SECRET_HERE

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
POPPLER_PATH=/usr/bin
SPACY_MODEL=en_core_web_sm

# Processing Configuration
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff
IMAGE_DPI=300
PROCESSING_TIMEOUT=120

# Fraud Detection Configuration
DUPLICATE_SIMILARITY_THRESHOLD=0.85
AMOUNT_OUTLIER_ZSCORE=3.0
HIGH_RISK_SCORE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
